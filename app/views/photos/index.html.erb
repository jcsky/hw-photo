<div class="wrapper">
<% if current_user %>
  <%= form_for @photo, :url => photos_path, :html => { :multipart => true } do |form| %>
    <%= form.file_field :photo %> <br>
    <%= form.text_area "description" %> <br>
    <%= form.submit "submit", :class =>"btn btn-primary" %>
  <% end %>
<% end %>




<!-- 列出所有photo依updated_at排序 -->

  <% @photos.each do |p| %>
    <div class="p">
      <%= p.user.name %>
      <%= image_tag( p.photo(:original) ) %>
      <%= link_to "刪除", photo_path(p), :method => :delete, :class => "btn btn-danger" %>

      <%= p.likes_count %>
      <% like = p.find_like_by_user(current_user) %>
      <% if like %>
        <%= link_to "unlike", photo_like_path(p, like), :method => :delete, :class => "btn btn-danger" %>
      <% else %>
        <%= link_to "like", photo_likes_path(p), :method => :post, :class => "btn btn-danger" %>
      <% end %>
      <h3><%= p.description %></h3>
    </div>
  <% end %>
</div>