
<%= photo.likes_count %>
<% if current_user %>
  <% like = photo.find_like_by_user(current_user) %>
  <% if like %>
    <%= link_to "unlike", photo_like_path(photo, like), :method => :delete, :class => "btn btn-danger", :remote => true %>
  <% else %>
    <%= link_to "like", photo_likes_path(photo), :method => :post, :class => "btn btn-danger", :remote => true %>
  <% end %>
<% end %>